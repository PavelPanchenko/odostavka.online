# Database Configuration
POSTGRES_DB=food_delivery
POSTGRES_USER=food_delivery_user
POSTGRES_PASSWORD=your_secure_password_here

# API Configuration
SECRET_KEY=your_secret_key_here
DATABASE_URL=postgresql://food_delivery_user:your_secure_password_here@postgres:5432/food_delivery
REDIS_URL=redis://redis:6379

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Let's Encrypt
CERTBOT_EMAIL=your_email@example.com

# Deployment Configuration (for local deployment)
SERVER_HOST=your_server_ip
SERVER_USER=your_server_user
SERVER_PATH=/opt/food-delivery
DOMAIN=odostavka.online

# Note: SERVER_SSH_KEY should be added to GitHub Secrets, not here!
# GitHub Secrets required:
# - SERVER_SSH_KEY (private SSH key for server access)
# - SERVER_USER (same as above)
# - SERVER_HOST (same as above) 
# - SERVER_PATH (same as above)

# CORS Origins (comma separated)
ALLOWED_ORIGINS=https://odostavka.online,https://admin.odostavka.online,https://api.odostavka.online

# SMTP Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@odostavka.online

# Telegram Bot Tokens (optional)
TELEGRAM_CLIENT_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_COURIER_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_ADMIN_BOT_TOKEN=your_telegram_bot_token

# Payment Configuration
ROBOKASSA_MERCHANT_LOGIN=your_merchant_login
ROBOKASSA_PASSWORD1=your_password1
ROBOKASSA_PASSWORD2=your_password2
ROBOKASSA_TEST_MODE=true
ROBOKASSA_RESULT_URL=https://api.odostavka.online/api/v1/payments/robokassa-result
ROBOKASSA_SUCCESS_URL=https://odostavka.online/orders
ROBOKASSA_FAIL_URL=https://odostavka.online/orders
